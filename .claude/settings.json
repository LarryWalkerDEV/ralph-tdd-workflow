{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Task",
      "WebFetch",
      "WebSearch",
      "Bash",
      "Edit",
      "Write"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/ralph-guard.js check-edit \"$CC_TOOL_FILE_PATH\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/ralph-guard.js check-completion",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
